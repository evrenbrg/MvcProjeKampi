@using MvcProjeKampi.EntityLayer.Concrete
@model List<Category>


<h3>Mvc Kamp Tablo Örneği</h3>
<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Adı</th>
        <th>Açıklama</th>
        <th>Status</th>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>@item.CategoryID</td>
        <td>@item.CategoryName</td>
        <td>@item.CategoryDescription</td>
        <td>@item.CategoryStatus</td>
    </tr>
    }
</table>
<a href="/Category/AddCategory" class="btn btn-info">Yeni Kategori</a>
<a href="/Category/GetCategoryList" class="btn btn-warning">Kategori Listesi</a>
<a href="/Category/AddCategory" class="btn btn-danger">Kategori Açıklamaları</a>
